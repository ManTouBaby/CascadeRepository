<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="#FFFFFF"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="12dp"
    android:paddingRight="12dp">


    <LinearLayout
        android:id="@+id/line_container"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginRight="8dp"
        android:gravity="center_vertical"
        android:padding="0dp">

        <include layout="@layout/include_line_tag" />
    </LinearLayout>

    <com.hy.cascade.widget.CornerTextView
        android:id="@+id/item_pro"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/line_container"
        android:gravity="center"
        android:text="天天是是是"
        android:textColor="#FFFFFF"
        app:auto_background="true"
        app:radius="4dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/item_pro"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="名称"
                android:textColor="#333"
                android:textSize="16sp" />

            <View
                android:layout_width="8dp"
                android:layout_height="1dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="#e1e1e1" />

            <TextView
                android:id="@+id/item_member_job"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="452466"
                android:textColor="#B6B6B6"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="452466"
            android:textColor="#8b8b8b"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/cascade_select_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/icon_cascade_item_select" />
</RelativeLayout>